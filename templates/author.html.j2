{% extends "base.html.j2" %}
{% block title %}
  {{ author.name }}
{% endblock %}
{% block body %}
  <div class="row justify-content-center mb-1">
    <div class="col col-md-6">
      <h1>
        <a href="/">Catalog</a> /
        <a href="../">Authors</a> /
        {{ author.name }}
      </h1>

      {% for name, url in author.links.items() %}
        <a class="btn btn-light" href="{{ url }}">
          {{ name }}
        </a>
      {% endfor %}

    </div>
  </div>
{% endblock %}
