{% extends "base.html.j2" %}
{% block title %}
  {{ author.name }}
{% endblock %}
{% block body %}
<div class="row justify-content-center mb-1">
  <div class="col col-md-6">
    <h1>
      <a href="/">Catalog</a> /
      <a href="authors.html">Authors</a> /
      {{ author.name }}
    </h1>

    <p>{{ author.short }}</p>
    {% markdown %}
      {{ author.about }}
    {% endmarkdown %}

    {% for name, url in author.links.items() %}
    <a class="btn btn-light" href="{{ url }}">
      {% if author.get_icon(name, url) %}
        <img src="./assets/{{ author.get_icon(name, url) }}" class="icon"/>
      {% endif %}
      {{ name }}
    </a>
    {% endfor %}
  </div>
</div>

<div class="row row-cols-1 row-cols-md-4 g-1 mt-1">
  {% for app in apps %}
    {% include 'app-card.html.j2' %}
  {% endfor %}
</div>

{% endblock %}
