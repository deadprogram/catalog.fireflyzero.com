{% extends "base.html.j2" %}
{% block title %}
  {{ app.name }} by {{ app.author }}
{% endblock %}
{% block body %}
  <div class="row justify-content-center">
    <div class="col col-md-6">
      <h1>{{ app.name }}</h1>
      <ul class="list-unstyled">
        <li>
          <i class="fa-solid fa-user" title="author"></i>
          {{ app.author }}
        </li>
        <li>
          <i class="fa-solid fa-circle-info" title="short description"></i>
          {{ app.short }}
        </li>
        <li>
          <i class="fa-solid fa-calendar-plus" title="date when added"></i>
          {{ app.added }}
        </li>
      </ul>

      {% markdown %}
        {{ app.desc }}
      {% endmarkdown %}

      {% if app.repo %}
        <a href="{{ app.repo }}" target="_blank" class="btn btn-light">
          <i class="fa-solid fa-code-branch"></i>
          source code
        </a>
      {% endif %}
      <a href="{{ app.download }}" target="_blank" class="btn btn-light">
        <i class="fa-solid fa-download"></i>
        download
      </a>

    </div>
  </div>
{% endblock %}
